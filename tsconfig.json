{
  "compilerOptions": {
    "target": "es6", // Changed from es2015 to es6 for better compatibility
    "lib": ["dom", "dom.iterable", "esnext"], // Removed redundant libraries
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/ui/scroll-animation.tsx", "components/ui/scroll-animation.tsx"],
  "exclude": ["node_modules"]

}